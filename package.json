{
  "name": "claude-code-upgrade-watcher",
  "version": "0.1.2",
  "author": "Mike Bannister <notimpossiblemike@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/possibilities/claude-code-upgrade-watcher.git"
  },
  "license": "MIT",
  "description": "Claude Code Upgrade Watcher",
  "type": "module",
  "bin": {
    "claude-code-upgrade-watcher": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "nodemon --watch src/ --ext ts --exec tsup",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md,mdx,css,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "release:patch": "./release.sh patch",
    "release:minor": "./release.sh minor",
    "release:major": "./release.sh major"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
